{
  "name": "tc-si",
  "displayName": "TC Simplex",
  "publisher": "Michai",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/michalusio/TC-si"
  },
  "description": "Turing Complete Simplex language extension",
  "version": "0.8.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:semanticLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TC Simplex",
      "properties": {
        "tcsi.warnOnMissingExplicitReturn": {
          "type": "boolean",
          "default": false,
          "description": "Show warnings when a function with return type is missing an explicit return"
        },
        "tcsi.showTypeCheckingErrors": {
          "type": "boolean",
          "default": true,
          "description": "Show type-checking errors"
        },
        "tcsi.showInlayTypeHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inlay type hints in variable declarations"
        },
        "tcsi.logDebugInfo": {
          "type": "boolean",
          "default": false,
          "description": "Log additional information in the TC-si debug window"
        }
      }
    },
    "languages": [
      {
        "id": "si",
        "aliases": [
          "TC Simplex file",
          "si"
        ],
        "extensions": [
          ".si"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "images/logo.png",
          "dark": "images/logo.png"
        }
      },
      {
        "id": "symphony",
        "aliases": [
          "TC Symphony file",
          "symphony"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".symphony"
        ],
        "icon": {
          "light": "images/logo.png",
          "dark": "images/logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "si",
        "scopeName": "source.si",
        "path": "./dist/si.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.symphony": "symphony"
        }
      },
      {
        "language": "symphony",
        "scopeName": "source.symphony",
        "path": "./dist/symphony.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "title": "Show assembly for Symphony",
        "command": "si.showSymphonyAssembly",
        "when": "editorLangId == si"
      }
    ]
  },
  "configurationDefaults": {
    "si": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "scripts": {
    "compile": "tsc --noEmit && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "test": "npm run compile && node esbuild-test.js && vscode-test",
    "vscode:prepublish": "npm run package",
    "package": "tsc --noEmit && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.0",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "esbuild-plugin-copy": "^2.1.1",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "parser-combinators": "^1.2.6"
  }
}
